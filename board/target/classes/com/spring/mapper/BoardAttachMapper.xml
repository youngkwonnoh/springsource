<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.BoardAttachMapper">
	
	<!-- insert : id는 insert -->
	<insert id="insert">
		insert into spring_attach(uuid, uploadPath, fileName, fileType, bno)
		values(#{uuid}, #{uploadPath},#{fileName}, #{fileType}, #{bno}) 	
	</insert>
	
	<!-- delete : id는 delete, bno 일치 시 -->
	<delete id="delete">
		delete from spring_attach where bno = #{bno}
	</delete>
	
	<!-- select : id는 findByBno, bno 일치 시(AttachFileDTO 이용) -->
	<select id="findByBno" resultType="com.spring.domain.AttachFileDTO">
		select * from spring_attach where bno=#{bno}
	</select>
	
</mapper>